meta {
  name: UpdateAvatar
  type: http
  seq: 3
}

put {
  url: {{base_url}}/talent/avatar
  body: multipartForm
  auth: inherit
}

headers {
  Authorization: Bearer {{access_token}}
}

body:json {
  {
    "headline": "a headline for testing",
    "bio": "I love coding",
    "location": "Planet earth"
  }
}

body:multipart-form {
  avatar: @file(/home/majoramari/Downloads/1.png)
}

body:file {
  file: @file(/home/majoramari/Downloads/1.png) @contentType(image/png)
}

settings {
  encodeUrl: true
  timeout: 0
}
